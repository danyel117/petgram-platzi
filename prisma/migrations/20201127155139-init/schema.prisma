datasource db {
  provider = "mysql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User{
  id Int @default(autoincrement()) @id
  email   String   @unique
  name    String?
}

model Category{
  id Int @default(autoincrement()) @id
  nombre String
}

model Post{
  id Int @default(autoincrement()) @id
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  src String
  user User @relation(fields: [userId],references:[id])
  userId Int
  likes Int
}
